<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/BreakingNewsTitle"
        android:padding="20dp"
        android:textColor="#000000"
        android:id="@+id/titleText"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/translate"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/ic_baseline_translate_24"
        android:paddingTop="25dp"
        android:paddingRight="25dp"
        app:layout_constraintEnd_toStartOf="@id/changeToArticle"
        app:layout_constraintRight_toLeftOf="@id/changeToArticle"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"
        android:paddingEnd="25dp" />


    <ImageView
        android:id="@+id/changeToArticle"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/ic_baseline_assignment_24"
        android:paddingTop="25dp"
        android:paddingRight="25dp"
        app:layout_constraintEnd_toStartOf="@id/speak"
        app:layout_constraintRight_toLeftOf="@id/speak"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"
        android:paddingEnd="25dp" />

    <ImageView
        android:id="@+id/speak"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/ic_baseline_headset_24"
        android:paddingTop="25dp"
        android:paddingRight="25dp"
        app:layout_constraintEnd_toStartOf="@id/scanner"
        app:layout_constraintRight_toLeftOf="@id/scanner"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingEnd="25dp" />

    <ImageView
        android:id="@+id/scanner"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/ic_baseline_fullscreen_24"
        android:paddingTop="25dp"
        android:paddingRight="25dp"
        app:layout_constraintEnd_toStartOf="@+id/search"
        app:layout_constraintRight_toLeftOf="@+id/search"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingEnd="25dp" />

    <ImageView
        android:id="@+id/search"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/ic_baseline_search_24"
        android:paddingTop="25dp"
        android:paddingRight="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingEnd="25dp" />

</androidx.constraintlayout.widget.ConstraintLayout>